<?xml version="1.0" encoding="utf-8"?>
<com.ceejay.challengetime.helper.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/run">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/seperator_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/grid_item_name"
                android:gravity="center"
                android:background="@drawable/seperator_horizontal_white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/seperator_horizontal"/>
        </LinearLayout>
    </LinearLayout>

</com.ceejay.challengetime.helper.SquareLayout>